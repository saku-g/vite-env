{
  "name": "vite-project",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "reinstall": "rimraf node_modules && npm i",
    "clean:img": "rimraf public/assets/img",
    "lint:markup": "markuplint \"src/**/*.html\"",
    "lint:style": "stylelint --fix \"src/**/*.scss\"",
    "lint:es": "eslint --fix \"src/**/*.js\"",
    "watch:img": "chokidar \"src/assets/original-img/**/*\" -c \"node sharp.js\" --initial",
    "build:img": "npm run clean:img && node imagemin.js",
    "dev": "npm run watch:img & vite",
    "build": "run-p lint:* && npm run build:img && vite build",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@markuplint/mustache-parser": "^3.11.0",
    "autoprefixer": "^10.4.16",
    "chokidar-cli": "^3.0.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "globule": "^1.3.4",
    "markuplint": "^3.13.0",
    "npm-run-all": "^4.1.5",
    "postcss-sort-media-queries": "^5.2.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "sass": "^1.69.5",
    "sharp": "^0.33.0",
    "stylelint": "^15.11.0",
    "stylelint-config-property-sort-order-smacss": "^9.1.0",
    "stylelint-config-standard-scss": "^11.0.0",
    "vite": "^5.0.0",
    "vite-plugin-handlebars": "^1.6.0",
    "vite-plugin-sass-glob-import": "^3.0.2"
  }
}
