{
  "name": "vite",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "cleanup": "rimraf public/",
    "lint:html": "markuplint \"src/**/*.html\"",
    "lint:css": "stylelint --fix \"src/**/*.scss\" && prettier --write \"src/**/*.scss\"",
    "lint:js": "eslint --config \".eslintrc.cjs\" --fix \"src/**/*.js\" && prettier --write \"src/**/*.js\"",
    "watch:img": "chokidar \"src/assets/img/**/*\" -c \"node imagemin.js\" --initial",
    "build:img": "npm run cleanup && node imagemin.js",
    "dev": "vite & npm run watch:img",
    "build": "run-p lint:* build:img && vite build",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@markuplint/mustache-parser": "^3.11.0",
    "autoprefixer": "^10.4.16",
    "chokidar-cli": "^3.0.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^10.0.1",
    "imagemin-webp": "^8.0.0",
    "markuplint": "^3.13.0",
    "npm-run-all": "^4.1.5",
    "postcss-sort-media-queries": "^5.2.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "sass": "^1.69.3",
    "stylelint": "^15.11.0",
    "stylelint-config-property-sort-order-smacss": "^9.1.0",
    "stylelint-config-standard-scss": "^11.0.0",
    "vite": "^4.4.5",
    "vite-plugin-handlebars": "^1.6.0"
  }
}
